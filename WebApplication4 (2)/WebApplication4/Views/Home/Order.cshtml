@{
    ViewBag.Title = "";
}

<div class="container" style="margin-left: 10px">
    <h1>주문페이지</h1><br />
    <h3><strong>주문상품</strong></h3>
    <hr style="border-top: 1px solid #cccccc;" />
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-2">
                <img class="img-responsive" src="http://placehold.it/100x70">
            </div>
            <div class="col-xs-4">
                <h4 class="product-name"><strong>상품이름</strong></h4>
            </div>
            <div class="col-xs-6">
                <div class="col-xs-6 text-right">
                    <h6><strong>111111 ￦</strong></h6>
                </div>
                <div class="col-xs-4">
                    <input type="number" class="form-control input-sm" value="1" min="0" max="20" style="width:70px;">
                </div>
                <div class="col-xs-2">
                    <button type="button" class="btn btn-link btn-xs">
                        <span class="glyphicon glyphicon-trash"> </span>
                    </button>
                </div>
            </div>
        </div>
        <hr>
        <div class="col-xs-9 pull-right">
            <h4 class="text-right">총합 <strong>111111 ￦</strong></h4>
        </div>
    </div>
</div>
<div class="container" style="margin-bottom: 10px; margin-left: 10px">
    <h3><strong>주문자 정보</strong></h3>
    <hr style="border-top: 1px solid #cccccc;" />
    <form role="form" style="max-width: 500px;">
        <div class="form-group">
            <label for="Name">주문자 성명</label>
            <input type="text" class="form-control" id="username" placeholder="이름 입력" maxlength="5" />
        </div><br />
        <div class="form-group">
            <label for="Address">주소</label>
            <input type="text" class="form-control" id="username" placeholder="주소 입력" />
        </div><br />
        <div class="form-group">
            <label for="Telephone">일반전화</label>
            <input type="text" class="form-control" id="usertelephone" placeholder="- 빼고 입력" />
        </div><br />
        <div class="form-group">
            <label for="Phone">휴대전화</label>
            <input type="text" class="form-control" id="userphone" placeholder="- 빼고 입력" maxlength="5" />
        </div><br />
        <div class="form-group">
            <label for="Email">이메일</label>
            <input type="email" class="form-control" id="useremail" placeholder="이메일 주소 입력" maxlength="5" />
        </div><br />
        <div class="form-group">
            <label for="Message">배송 메세지</label>
            <textarea class="form-control" id="message"></textarea>
        </div><br />
        <div class="form-group">
            <label for="Password">주문 비밀번호</label>
            <input type="password" class="form-control" id="userpw" placeholder="주문 조회시 필요(4자에서 12자)" min="4" maxlength="12" />
        </div><br />
        <div class="form-group">
            <label for="Passwordconfirm">주문 비밀번호 확인</label>
            <input type="password" class="form-control" id="userpwconfirm" placeholder="한번 더 입력" min="4" maxlength="12" />
        </div><br />
    </form>
    <hr style="border-top: 1px solid #cccccc;" />
    <div class="col-xs-3">
        <button type="button" onclick="location.href='/Home/Buy'" class="col-xs-3 btn btn-primary btn-sm btn-block">
            <span class="glyphicon glyphicon-share-alt"></span> 돌아가기
        </button>
    </div>
    <div class="col-xs-3 pull-right text-center">
        <button type="button" onclick="" class="btn btn-success btn-block">
            결제
        </button>
    </div>
</div>