@{
    ViewBag.Title = "";
}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="panel-heading">
                <div class="panel-title">
                    <div class="row">
                        <div class="col-xs-6">
                            <h2>장바구니</h2>
                        </div>
                        <div class="col-xs-6">
                            <button type="button" onclick="location.href='/Home/Product_Buy1'" class="btn btn-primary btn-sm btn-block">
                                <span class="glyphicon glyphicon-share-alt"></span> 계속 쇼핑하기
                            </button>
                        </div>
                    </div>
                </div>

                <hr style="border-bottom: 1px solid #cccccc;" />
                @{
                    for (var i = 0; i < ViewBag.Cart.Count; i++)
                    {
                        <div class="panel-body">

                            <div class="row">
                                <div class="col-xs-2">
                                    <img class="img-responsive" src="../../img/mat/@(ViewBag.Cart[i].Img)">
                                </div>
                                <div class="col-xs-4">
                                    <h4>@(ViewBag.Cart[i].Name)</h4>
                                </div>
                                <div class="col-xs-6">
                                    <div class="col-xs-6 text-right">
                                        <h6>가격:@(ViewBag.Cart[i].Price)￦</h6>
                                    </div>
                                    <div class="col-xs-4">
                                        <input type="number" class="form-control input-sm" value="1" min="0" max="20" style="width:70px;">
                                    </div>
                                    <div class="col-xs-2">
                                        <button type="button" class="btn btn-link btn-xs">
                                            <span class="glyphicon glyphicon-trash"> </span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                    }
                }

                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-9">
                            <h4 class="text-right">총합 <strong>111111 ￦</strong></h4>
                        </div>
                        <div class="col-xs-3">
                            <button type="button" onclick="location.href = '/Home/Order'" class="btn btn-success btn-block">
                                결제
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>