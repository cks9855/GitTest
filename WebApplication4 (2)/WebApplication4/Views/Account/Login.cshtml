@{
    ViewBag.Title = "Login";
}
<div class="container">
    <div class="row">
        <div class="page-header">
            <h1>로그인</h1>
        </div>
        <div class="col-md-6">
            <div class="login-box well">
                <form accept-charset="UTF-8" role="form" method="post" action="">
                    <div class="form-group">
                        <label for="username-email">아이디</label>
                        <input name="id" value='' placeholder="Username" type="text"  class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="password">비밀번호</label>
                        <input name="password" id="password" value='' placeholder="Password" type="password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-default btn-login-submit btn-block m-t-md" value="Login" />
                    </div>
                    <span class='text-center'><a href="/bbs/index.php?mid=index&act=dispMemberFindAccount" class="text-sm">비밀번호 찾기</a></span>
                    <hr />
                    <div class="form-group">
                        <a href="/Account/register" class="btn btn-default btn-block m-t-md"> 회원가입</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>